{
  "manifest_version": 3,
  "name": "Cognitive Load Router â€” Browser Telemetry",
  "version": "0.1.0",
  "description": "Sends browser activity telemetry to the local Cognitive Load Router engine.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "idle",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8765/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Cognitive Load Router"
  }
}
