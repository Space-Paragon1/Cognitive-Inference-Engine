{
  "manifest_version": 3,
  "name": "CLR LMS Connector",
  "version": "0.1.0",
  "description": "Sends Canvas / Blackboard / Moodle interactions to the Cognitive Load Router engine.",
  "permissions": ["storage", "idle"],
  "host_permissions": [
    "http://127.0.0.1:8765/*",
    "*://*.instructure.com/*",
    "*://*.canvas.com/*",
    "*://*.blackboard.com/*",
    "*://*.moodle.org/*",
    "*://*.moodlecloud.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://*.canvas.com/*",
        "*://*.blackboard.com/*",
        "*://*.moodle.org/*",
        "*://*.moodlecloud.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
